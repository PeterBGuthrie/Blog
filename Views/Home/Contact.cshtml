@model Blog.Models.EmailModel

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/contact.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Send me</h1>
                    <span class="subheading">Memes, Jobs, or Curry</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid page-body-wrapper">
    <div>
        <p>
            Have any questions, want to talk about Full Stack Development, or the Tour De France. <br />This is the right place!
        </p>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        <h4>Send me a message.</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "John Doe" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "What is your purpose." })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Body, new { rows = 10, cols = 92, @class = "form-control", placeholder = "Body..." })
                @Html.ValidationMessageFor(m => m.Body)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-outline-success" value="Send" />
            </div>
        </div>
    }
</div>